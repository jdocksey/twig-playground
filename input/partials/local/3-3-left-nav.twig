{% import '@macros/section-with-left-channel.twig' as section %}

{% set items = [
    'Purpose',
    'Eligibility',
    'Nature of Grant',
    'General Information',
    'Apply',
    'Other Opportunities',
    'Timeline',
] %}

{% include '@localPartials/component-title.twig' with { text: '3.3 Left Nav' } only %}
{{ section.start() }}
    {{ section.left_channel_start() }}
        {# Navigation menu (mobile) #}
        <div x-data="{ open: false }" class="md:hidden bg-gray-50">
            <button @click="open = !open" class="flex items-center gap-5 w-full py-4 px-5">
                <span class="w-8">
                    <span x-show="!open">
                        {% include '@localPartials/menu.twig' with { alt_text: 'open intra-page navigation' } only %}
                    </span>
                    <span x-show="open">
                        {% include '@localPartials/cross.twig' with { alt_text: 'close intra-page navigation' } only %}
                    </span>
                </span>
                <span>
                    on this page
                </span>
            </button>
            <div class="relative" border border-black>
                <nav x-cloak x-show="open" x-collapse class="absolute top-0 inset-x-0 bg-gray-50">
                    <ol>
                        {% for item in items %}
                            <li>
                                <a href="#3-3-left-nav-{{ loop.index0 }}">
                                    {{ item }}
                                </a>
                            </li>
                        {% endfor %}
                    </ol>
                </nav>
            </div>
        </div>
    {{ section.left_channel_end() }}

    {{ section.main_content_start() }}
        <div>
            ( Main Content )
            <div class="flex flex-col gap-4 m-4">
                {% for i in 1..10 %}
                    <div>Item {{ i }}</div>
                {% endfor %}
            </div>
        </div>
    {{ section.main_content_end() }}
{{ section.end() }}
