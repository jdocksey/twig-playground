{% import '@macros/section-with-left-channel.twig' as section %}

{% set items = [
    'Purpose',
    'Eligibility',
    'Nature of Grant',
    'General Information',
    'Apply',
    'Other Opportunities',
    'Timeline',
] %}

{% include '@localPartials/component-title.twig' with { text: '3.3 Left Nav' } only %}
{{ section.start() }}
    {{ section.left_channel_start() }}

        {# Navigation menu (mobile) #}
        <div x-data="{
                open: false,
                goToContent() {
                    this.open = false;
                }
            }"
            class="md:hidden bg-gray-50"
        >
            {# The z-index of the button is set higher than the menu dropdown so that the button's box-shadow will overlap the dropdown #}
            <button @click="open = !open" :class="!open && 'shadow-md-heavy'" class="relative z-20 flex items-center gap-5 w-full py-4 px-5">
                {# The height and width are set so that there are no minor size changes when the icon being displayed changes #}
                <span class="h-5 w-8">
                    <span x-show="!open">
                        {% include '@localPartials/menu.twig' with { alt_text: 'open intra-page navigation' } only %}
                    </span>
                    <span x-show="open">
                        {% include '@localPartials/cross.twig' with { alt_text: 'close intra-page navigation' } only %}
                    </span>
                </span>
                <span class="text-sm font-bold">on this page</span>
            </button>
            <div class="relative">
                <div x-cloak x-show="open" x-collapse class="absolute top-0 inset-x-0 z-10 overflow-hidden pb-4">
                    {# To have the shadow effect be shown on the bottom and not the top of this element: its parent `overflow` is set to `hidden`, and padding is added to the bottom of the parent #}
                    <nav class="bg-gray-50 py-2 shadow-md-heavy">
                        <ol>
                            {% for item in items %}
                                <li>
                                    <a @click="goToContent()" href="#3-3-left-nav-{{ loop.index0 }}" class="block text-sm py-3 px-5">
                                        {{ item }}
                                    </a>
                                    {% if not loop.last %}
                                        <span class="block h-px mx-5 bg-gray-200"></span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    {{ section.left_channel_end() }}

    {{ section.main_content_start() }}
        <div>
            ( Main Content )
            <div class="flex flex-col gap-4 m-4">
                {% for i in 1..10 %}
                    <div>Item {{ i }}</div>
                {% endfor %}
            </div>
        </div>
    {{ section.main_content_end() }}
{{ section.end() }}
