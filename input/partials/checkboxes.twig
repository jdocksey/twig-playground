{% from '@macros/production.twig' import checkbox %}
{% import '@macros/code.twig' as code %}
{% import '@macros/section.twig' as section %}

{% set checkbox_labels = [
    'All',
    'Articles',
    'Stories',
    'Conferences',
    'Opportunities',
] %}

{{ section.start(gray_background, first, last) }}
    <div class="flex gap-12">
        <div class="flex flex-col gap-4">
            {% for label in checkbox_labels %}
                {% set id = 'checkbox-' ~ loop.index0 %}
                {% set checked = loop.index0 % 3 == 1 %}
                {{ checkbox(label, checked, label, label, id) }}
            {% endfor %}
        </div>
        <div class="flex flex-col gap-4">
            {{ code.simple("{% from '@macros/production.twig' import checkbox %}") }}
            {{ code.simple("{{ checkbox('Label', false, 'name', 'value', 'id') }}") }}
        </div>
    </div>
{{ section.end() }}
