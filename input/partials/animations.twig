{% from '@macros/production.twig' import label %}
{% import '@macros/section.twig' as section %}

{% set items = [
    'Apples',
    'Bananas',
    'Cashews',
    'Spinach',
    'Zucchini',
] %}

{# Reference:
    https://www.experian.com/corporate/experian-corporate-social-responsibility/
 #}

{{ section.start(gray_background, first, last) }}
    {# TODO: Fix this #}
    <div x-data="{ sectionVisible: false }" class="space-y-8"></div>
        <h2>Animations</h2>
        <div x-text="sectionVisible ? 'false' : 'true'"></div>
        <div x-intersect="sectionVisible = true" x-intersect:leave="sectionVisible = false" class="w-64 flex flex-col">
            {% for item in items %}
                {% set delay = (loop.index0 * 150) ~ 'ms' %}
                <h5 :class="sectionVisible ? 'animate-fade-in-right' : ''" class="opacity-0 [animation-delay:{{delay}}] py-6 border-b-2">{{ item }}</h5>
            {% endfor %}
        </div>
    </div>
{{ section.end() }}
