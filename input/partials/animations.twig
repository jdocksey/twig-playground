{% from '@macros/production.twig' import label %}
{% import '@macros/section.twig' as section %}

{% set items = [
    'Apples',
    'Bananas',
    'Cashews',
    'Spinach',
    'Zucchini',
] %}

{# References:
    https://snowdonia.gov.wales/discover/landscapes-and-wildlife/
    https://www.experian.com/corporate/experian-corporate-social-responsibility/
 #}

{{ section.start(gray_background, first, last) }}
    <h2>Animations</h2>
    <div x-data="{ visible: false }" x-intersect.half.once="visible = true" class="w-64 flex flex-col mt-12">
        {% for item in items %}
            <h5 :class="visible ? 'animate-fade-in-right' : ''" class="opacity-0 [animation-delay:{{ 150 * loop.index0 }}ms] py-6 border-b-2">
                {{ item }}
            </h5>
        {% endfor %}
    </div>
{{ section.end() }}
