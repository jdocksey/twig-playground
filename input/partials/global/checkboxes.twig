{% from '@macros/components-global.twig' import checkbox %}
{% import '@macros/code.twig' as code %}
{% import '@macros/section.twig' as section %}

{% set checkbox_labels = [
    'All',
    'Articles',
    'Stories',
    'Conferences',
    'Opportunities',
] %}

{{ section.start(gray_background, first, last, 'flex gap-12 items-center') }}
    <div class="flex flex-col gap-4">
        {% for label in checkbox_labels %}
            {% set id = 'checkbox-' ~ loop.index0 %}
            {% set checked = loop.index0 in [0, 1, 4] %}
            {{ checkbox(label, checked, label, label, id) }}
        {% endfor %}
    </div>
    {{ code.simple("{{ checkbox('Label', false, 'name', 'value', 'id') }}") }}
{{ section.end() }}
