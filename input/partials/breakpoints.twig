{% set breakpoints = [
    { tag: 'xl', width: '1200px', width_class: 'w-[1200px]', max_width_class: 'max-w-screen-xl' },
    { tag: 'lg', width: '991px', width_class: 'w-[991px]', max_width_class: 'max-w-screen-lg' },
    { tag: 'md', width: '768px', width_class: 'w-[768px]', max_width_class: 'max-w-screen-md' },
    { tag: 'sm', width: '374px', width_class: 'w-[374px]', max_width_class: 'max-w-screen-sm' },
] %}

<div class="bg-blue-950 py-17.5 mb-8.75 flex flex-col items-center gap-6">
    {% for breakpoint in breakpoints %}
    <button x-data @click="() => navigator.clipboard.writeText('{{ breakpoint.max_width_class }}')"
        class="{{ breakpoint.width_class }} p-4 text-center text-white border border-white rounded-lg bg-white bg-opacity-5 hover:bg-opacity-20">

        <span class="font-mono text-xs">
            {{ breakpoint.tag }}: {{ breakpoint.width }}
        </span>
    </button>
    {% endfor %}
</div>
