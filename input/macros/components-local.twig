            {% elseif main_link_style == 'button' %}
                <div class="w-fit mt-7.5 md:mt-5.5 lg:mt-6.5 {{ content_padding }}">
                    {{ link_button(main_link_url, main_link_text, 's', false, true, false) }}
                </div>
            {% endif %}
        {% endif %}
    </div>
{% endmacro %}

