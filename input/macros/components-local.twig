            <div class="w-fit mt-5.5 md:mt-3.5 lg:mt-3.5 {{ content_padding }} flex flex-col gap-3.5">
            {% for link in links %}
                <a href="{{ link.url }}" class="text-blue-800 text-xs font-bold tracking-wide">{{ link.text }}</a>
            {% endfor %}
