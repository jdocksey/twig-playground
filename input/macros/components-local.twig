            <div class="relative w-full bg-gray-50 pt-6 pb-4 px-4 md:pt-12 md:pb-6 md:px-8 rounded-2xl md:rounded-3xl shadow-map">
                <button @click="closeVideo()" class="absolute top-2 right-2 md:top-4.5 md:right-4">
