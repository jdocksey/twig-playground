{# Macros for production code #}

{% macro link_button(address = '', text = '', size = 's', primary = true, include_icon = false) %}
    {% set background = 'bg-blue-400 hover:bg-blue-950' %}
    {% set text_color = 'text-blue-950 hover:text-white' %}

    {% set padding = '' %}
    {% set rounding = '' %}
    {% set text_size = '' %}
    {% set font_weight = '' %}
    {% set icon_gap = '' %}
    {% set icon_position = '' %}
    {% set icon_scale = '' %}

    {% if size == 's' %}
        {% set padding = 'py-4 px-10' %}
        {% set rounding = 'rounded-3xl' %}
        {% set text_size = 'text-sm leading-tight' %}
        {% set font_weight = 'font-bold' %}
        {% set icon_gap = 'gap-2' %}
        {% set icon_position = 'relative bottom-0.25' %}
        {% set icon_scale = '' %}
    {% elseif size == 'm' %}
        {% set padding = 'py-4 px-15' %}
        {% set rounding = 'rounded-3xl' %}
        {% set text_size = 'text-xl leading-tight' %}
        {% set font_weight = 'font-semibold' %}
        {% set icon_gap = 'gap-3' %}
        {% set icon_position = 'relative bottom-0.5' %}
        {% set icon_scale = 'scale-125' %}
    {% elseif size == 'l' %}
        {% set padding = 'py-5 px-15' %}
        {% set rounding = 'rounded-6xl' %}
        {% set text_size = 'text-6xl leading-tight' %}
        {% set font_weight = 'font-semibold' %}
        {% set icon_gap = 'gap-8' %}
        {% set icon_position = 'relative bottom-0.5' %}
        {% set icon_scale = 'scale-250' %}
    {% endif %}

    {% if not primary %}
        {% set background = 'bg-cyan-50 hover:bg-blue-400' %}
    {% endif %}

    {# TODO: Add animation/transition #}
    {# TODO: Add on-click UI change #}

    {% set code_for_copying = "{{ link_button(\'address\', \'Label\', \'" ~ size ~ "\', " ~ primary ~ ", " ~ include_icon ~ ") }}" %}

    <a x-data @click="() => navigator.clipboard.writeText(`{{ code_for_copying }}`)"
        {# TODO: Uncomment the following line for the production code (leaving it commented for now allows the link-buttons to be clicked for copying their usage code) #}
        {# href="{{ address }}" #}
        class="flex items-center no-underline stroke-blue-950 hover:stroke-white {{ background }} {{ padding }} {{ rounding }} {{ text_size }} {{ text_color }} {{ font_weight }} {{ icon_gap }}"
    >
        <span>{{ text }}</span>
        {% if include_icon %}
            {% include '@assets/link-icon.svg' with { class: icon_position ~ ' ' ~ icon_scale } %}
        {% endif %}
    </a>
{% endmacro %}
